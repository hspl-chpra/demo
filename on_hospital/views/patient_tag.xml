<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_patient_tag_form" model="ir.ui.view">
            <field name="name">view.patient.tag.form</field>
            <field name="model">patient.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="color" widget="color_picker"/>
                                <field name="color2" widget="color"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_patient_tag_tree" model="ir.ui.view">
            <field name="name">view.patient.tag.tree</field>
            <field name="model">patient.tag</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                    <field name="color2" widget="color" groups="base.group_no_one"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="action_patient_tag" model="ir.actions.act_window">
            <field name="name">Patient Tag</field>
            <field name="res_model">patient.tag</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>


        <menuitem
                id="hospital_patient"
                name="Tag"
                action="action_patient_tag"
                parent="menu_configuration"
                sequence="0"/>

    </data>
</odoo>
